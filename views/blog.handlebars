<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{content}}</p>
  <p>Created by {{user.username}} on {{format_date date_created}}</p>
  {{#if comments}}
  <h2>comments</h2>
  {{#each comments}}
  <p>{{comment_description}}</p>
  <p>Created by {{user.username}} on {{format_date date_created}}</p>
  {{/each}}
  {{/if}}
  {{#if logged_in}}
  <form data-blog_id="{{id}}">
    <h3>
        Leave your comment below.
    </h3>
    <textarea name="comment" id="comments"></textarea>
    <button type="submit" class="btn btn-primary">submit!</button>
  </form>
{{else}}
<p><strong>
    to leave a comment please login↗️
</strong></p>
{{/if}}
</div>

<script src="/js/comment.js">

</script>