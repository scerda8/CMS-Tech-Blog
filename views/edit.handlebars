<div class="col-md-6">
    <h3>Update your blog!</h3>

    <form class="form update-blog-form">
        <input type="hidden" value="{{id}}" id="blog_id">
      <div class="form-group">
        <label for="blog-name">blog title:</label>
        <input class="form-input" type="text" id="blog-name" name="blog-name" value="{{title}}" />
      </div>
     
      <div class="form-group">
        <label for="blog-desc">description:</label>
        <textarea class="form-input" id="blog-desc" name="blog-desc">{{content}}</textarea>
      </div>
      <div class="form-group">
      <button type="submit" class="btn btn-primary">Update</button>
      
      </div>
    </form>
  </div>

  <script src="/js/edit.js"></script>